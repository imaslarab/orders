<div class="add-page">
  <h2>{{order.item.name}}</h2>

	<form {{action 'createOrder' order on="submit"}}>
	  <label>Customer Name: </label>
	  {{input value=order.customerName placeholder="Enter Your Name"}}<br><br>

	  <label>Quantity: </label>
	  {{input value=order.quantity placeholder="Enter the quantity" }}<br><br>

	  {{input type="submit" value="Submit"}}
	</form>
</div>
